<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvLitrosAbastecimento"
                    style="@style/TextView_DestaqueListView"
                    android:text="20.00" />

                <TextView
                    android:id="@+id/tvLitros"
                    style="@style/TextView_DestaquePequenoListView"
                    android:text="litros" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tvKmAbastecimento"
                            style="@style/TextView_PadraoListView"
                            android:text="20" />
                        <TextView
                            android:id="@+id/tvkm"
                            style="@style/TextView_DestaquePequenoListView"
                            android:text="km" />



                    </TableRow>

                    <TableRow
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="2">

                        <TextView
                            android:id="@+id/tvDataAbastecimento"
                            style="@style/TextView_DataListView"

                            android:text="10/10/2010" />

                    </TableRow>

                </TableLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvIdAbastecimento"
                    style="@style/TextView_Padrao"
                    android:text="1"
                    android:visibility="invisible" />

            </LinearLayout>
        </TableRow>
    </TableLayout>


</LinearLayout>